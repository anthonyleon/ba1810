= form_for @company, :url => password_reset_path(params[:id]) do |f|
	- if @company.errors.any?
		.error_messages
			%h2 Form is invalid
			%ul
				- for message in @company.errors.full_messages
					%li= message
	.field
		= f.label :password
		= f.password_field :password
	.field
		= f.label :password_confirmation
		= f.password_field :password_confirmation
	.actions= f.submit "Update Password"
