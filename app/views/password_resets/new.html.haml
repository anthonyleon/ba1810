%h4.custom-card-title Reset Password
= form_tag password_resets_path, :method => :post do
  .input-field
    = text_field_tag :email, params[:email]
    = label_tag :email
  .row
    = submit_tag "Reset Password", class: 'btn wave-effect wave-light green'
  .row
    = link_to "Home", root_path, class: 'btn wave-effect wave-light upload'
