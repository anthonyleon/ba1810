.card
  .card-content
    .card-title.center-align
      %h5 Inventory Parts
    %hr/
    %table#invetoryPartsDT.table.striped.responsive-table.bordered
      %thead
        %tr
          %th Part Number
          %th Description
          %th Serial Number
          %th Condition
          %th Manufacturer
          %th
          %th
      %tbody
        - @inventory_parts.each do |inventory|
          %tr
            %td.srchtbl= link_to inventory.part_num, inventory
            %td.srchtbl= inventory.description
            %td.srchtbl= inventory.serial_num
            %td.srchtbl= inventory.condition
            %td.srchtbl= inventory.manufacturer
            / %td= link_to 'Delete', inventory_part_path(inventory), method: :delete, data: { confirm: 'Are you sure?' }
            %td= link_to 'Delete', inventory_part_path(inventory), data: { inventory_behavior: 'delete' }

= link_to 'Upload New Inventory', new_inventory_part_path, class: "btn upload"



