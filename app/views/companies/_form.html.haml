= form_for(@company, html: { class: "inline-form" }) do |f|
  - if @company.errors.any?
    #error_explanation
      %p
        = pluralize(@company.errors.count, "error")
        prohibited this company from being saved:
      %ul
        - @company.errors.full_messages.each do |message|
          %li= message
  .field.form-group
    = f.text_field :name, class: 'form-control', placeholder: "Company name"
  .field.form-group
    = f.text_field :email, class: 'form-control', placeholder: "E-mail"
  .field.form-group
    = f.password_field :password, class: 'form-control', placeholder: "Password"
  .field.form-group
    = f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm password"
  %span.actions
    = f.submit 'Sign Up', class: 'btn custom-btn'

    %a.btn.custom-btn.waves-effect.waves-light{href: root_path}
      %i.material-icons.right vpn_key
      Login In
