= simple_form_for(@company) do |f|
  - if @company.errors.any?
    #error_explanation
      %p
        = pluralize(@company.errors.count, "error")
        prohibited this company from being saved:
      %ul
        - @company.errors.full_messages.each do |message|
          %li= message
  .input-field.col.s12.m6
    = f.label :name, 'Company Name'
    = f.text_field :name
  .input-field.col.s12.m6
    = f.label :email, 'Registered Email'
    = f.text_field :email
  .input-field.col.s12.m6
    = f.label :phone
    = f.text_field :phone, id: 'phone'
  .input-field.col.s12.m6
    = f.label :representative, 'Representative Full Name'
    = f.text_field :representative
  .input-field.col.s12.m6
    = f.label :ein
    = f.text_field :ein
  .input-field.col.s12.m6
    = f.label :address, 'Street Address'
    = f.text_field :address
  .input-field.col.s12.m6.form-selection-space
    = f.label :country
    %br
    %br
    = f.input :country, collection: CountryStateSelect.countries_collection
  .input-field.col.s12.m6.form-selection-space
    = f.label :state
    %br
    %br
    - options = { form: f, field_names: { :country => :country, :state => :state } }
    = f.input :state, CountryStateSelect.state_options(options)
  .input-field.col.s12.m6
    = f.label :city
    = f.text_field :city
  .input-field.col.s12.m6
    = f.label :zip, 'Zip Code'
    = f.text_field :zip
  .input-field.col.s12.m6
    / = f.label :inc_country
    / %br
    / %br
    / = f.input :inc_country, collection: CountryStateSelect.countries_collection
  .input-field.col.s12.m6
    / = f.label :inc_state
    / %br
    / %br
    / - options = { form: f, field_names: { :country => :inc_country, :state => :state } }
    / = f.input :inc_state, CountryStateSelect.state_options(options)
  .input-field.col.s12.m6.form-selection-space
    = f.label :business_type
    %br
    %br
    = f.input :business_type, collection: Company.company_types
  .input-field.col.s12.m6
    = f.input :url
  .input-field.col.s12.m6
    = f.label :password
    = f.password_field :password
  .input-field.col.s12.m6
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  %span.actions
  -if current_user
    = f.submit 'Update', class: 'btn custom-btn'
  -else
    %button.btn.custom-btn.waves-effect.waves-light{:name => "action", :type => "submit"}
      %i.material-icons.right lock_open
      Sign Up


  :javascript
    $(function($){
      $("#phone").mask("(999) 999-9999");
    });
