.form-horizontal
	%p#alert= alert
	= form_for(@engine, html: { class: "inline-form" }) do |f|
		- if @engine.errors.any?
			#error_explanation
				%h2
					= pluralize(@engine.errors.count, "error")
					prohibited this auction from being saved:
				%ul
					- @engine.errors.full_messages.each do |message|
						%li= message
		.row
			.col-md-6
				%fieldset
					%legend.text-semibold
						%i.icon-compass4.position-left
						Engine Details
					.form-group
						%label.col-lg-3.control-label Engine Major Variant:
						.col-lg-9
							= f.text_field :engine_major_variant, :placeholder => "CFM56, PW4000 ", class: "form-control"
					.form-group
						%label.col-lg-3.control-label Engine Minor Variant:
						.col-lg-9
							= f.text_field :engine_minor_variant, :placeholder => "3C1, 112", class: "form-control"
					.form-group
						%label.col-lg-3.control-label ESN:
						.col-lg-9
							= f.text_field :esn, :placeholder => "831084", class: "form-control"
					.form-group
						%label.col-lg-3.control-label Disk Limiter:
						.col-lg-9
							= f.text_field :cycles_remaining, :placeholder => "6700 CR @ 3C1", class: "form-control"
					.form-group
						%label.col-lg-3.control-label Condition:
						.col-lg-9
							= f.select :condition, Engine.conditions.to_a.map { |c| [c[0].humanize, c[0]] }, class: "form-control"
			.col-md-6
				%fieldset
					%legend.text-semibold
						%i.icon-history.position-left
						Engine History
					.form-group
						%label.col-lg-3.control-label Current Operator:
						.col-lg-9
							= f.text_field :current_operator, :placeholder => "Magni-Charters", class: "form-control"
					.form-group
						%label.col-lg-3.control-label Last Operator:
						.col-lg-9
							= f.text_field :last_operator, :placeholder => "Southwest", class: "form-control"
					.form-group
						%label.col-lg-3.control-label Stored Location
						.col-lg-9
							= f.text_field :location, :placeholder => "Arizona", class: "form-control"
		.row
			.col-md-6
				%fieldset
					%legend.text-semibold
						%i.icon-check.position-left
						Asset Status
					.form-group
						%label.col-lg-3.control-label Engine Status:
						.col-lg-9
							= f.select :service_status, Engine.service_statuses.to_a.map { |s| [s[0].humanize, s[0]] }
					.form-group
						%label.col-lg-3.control-label Available Date:
						.col-lg-9
							= f.text_field :available_date, :placeholder => "DD/MM/YY", class: "form-control"
					.form-group
						%label.col-lg-3.control-label Available For:
						.col-lg-9
							= f.check_box :sale
							= f.label :sale, "Sale"

							= f.check_box :lease
							= f.label :lease, "Lease"
			.col-md-6
				%fieldset
					%legend.text-semibold
						%i.icon-download.position-left
						Attach Documents
