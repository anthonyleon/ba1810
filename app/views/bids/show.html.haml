%main
  #banner.clearfix
    %h1
      Review your order
  #main-container
    #checkout-container.container.clearfix
      .col-md-5#bid-buy
      %p
        %h2 Amount:
        = number_to_currency @bid.amount
      %p
        %h2 Company:
        = @bid.company.name
        
.col-md-6
  .container
    %h3
      Shipment Carrier
    .container
      - if @bid.order_id == nil
        Bid is still being considered.
      - elsif @bid.carrier_code && @bid.tracking_num
        %h4
          Shipment has been sent:
        %h5
          Carrier: #{@bid.carrier}
        %h5
          Tracking Number: #{@bid.tracking_num}
        %h5
          Description: #{@bid.shipment_desc}
      - elsif current_user == @bid.company
        = render 'shipment'
      - elsif current_user == @auction.company && !@bid.carrier_code
        Part has not been shipped yet.
      
      - if current_user == @auction.company && !@auction.paid # Add this when out of Testing Purposes && @bid.delivered && !@auction.paid
        %p
          %script{:src => "https://sandbox.armorpayments.com/assets/js/modal.min.js", :type => "text/javascript"}
          %a#paymentInstructionsFrame-lightbox-preview.ui-action.ui-action-small{"data-url" => @url} Release Payment
      - elsif @auction.paid
        = render :partial => "ratings/rate", :locals => {:rating => @rating}

    %h4
      Part: #{@bid.inventory_part.description}
    %h4
      Part number: #{@bid.inventory_part.part_num}
    %h4
      Serial number: #{@bid.inventory_part.serial_num}
    %h4
      Condition: #{@bid.inventory_part.condition}
    %h4
      Manufacturer: #{@bid.inventory_part.manufacturer}
    
    %br

  #documents.col-md-12
    - if @bid.inventory_part.documents.empty?
      %p There are no documents associated with this part.
    - else
      %table.table.table-hover
        %thead
          %tr
            %th Name
            %th Download Link
            %th
        %tbody
          - @bid.inventory_part.documents.each do |document|
            %tr
              %td= document.name
              %td= link_to 'Download', document.attachment_url
              - if document.inventory_part.company == current_user
                %td= button_to 'Delete', document, method: :delete, data:  { confirm: 'Are you sure that you wish to delete document?'}, class: 'btn'

