<% if bid.company == current_user %>
  <td><%= link_to 'Delete', auction_bid_path(@auction, bid), method: :delete, data: { confirm: 'Are you sure?' }  %></td>
  <% else %>
  <td> <form action="" method="GET">
    <script
      src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="pk_test_GHSQ1SVwsKr7xQcMKMbYGh7h"
      data-amount= "Amount due" <%= number_to_currency bid.amount %>
      data-description= <%= number_to_currency bid.amount %>
      data-locale="auto">
    </script>
  </form>

  <%= form_tag charges_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
    </article>
  <% end %>
</td>
<% end %>
