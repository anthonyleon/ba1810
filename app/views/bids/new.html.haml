.container.row
  .col.s12
    .card
      .card-content
        #bid-new.card-title
          #bid-info.col-lg-1
            %h5
              New Quote
            %h6
              = "Destination: #{@auction.destination_city}, #{@auction.destination_state} #{@auction.destination_zip} #{@auction.destination_country}" 
            %h6
              = "Part Number: " + @auction.part_num
            %h6
              = "Condition: " + AssetDecorator.rename(@auction,@auction.conditions)
            %h6
              = "Quantity: " + @auction.quantity.to_s
            %h6
              = "Min Cycles: " + (@auction.cycles ? @auction.cycles : "N/A")

        
        = form_for([@auction, @bid], html: {class: ''})do |f|
          - if @bid.errors.any?
            #error_explanation
              %h2
                = pluralize(@bid.errors.count, "error")
                prohibited this bid from being saved:
              %ul
                - @bid.errors.full_messages.each do |message|
                  %li= message
          .col-lg-2.bid-create
            #bid-fields.col-1
              .field
                = f.text_field :part_price, class: "form-control dollars", id: "part-price", placeholder: "Amount"
              .field
                = f.text_field :est_shipping_cost, class: "form-control dollars", id: "est-shipping", placeholder: "Shipping Cost"
              .field
                .left-align.quantity-label
                  = f.label :quantity
                = f.text_field :quantity, class: "form-control center-align", id: "quantity", placeholder: "Quantity"
                = f.hidden_field :inventory_part_id, value: InventoryPart.find_by(company: current_user, part_num: @auction.part_num).id
            .col-1
              .field
                = f.date_field :tag_date, class: "form-control", id: "bid-field", placeholder: "Tag Date"
              .field.document-fields
                = f.fields_for :document, Document.new, html: { multipart: true } do |cm|
                  .field.pull-left.field-title
                    Upload Files
                  .files
                    = cm.file_field :attachment, multiple: true
              #quote-num.left-align
                .field
                  = f.text_field :quote_num, placeholder: "Quote Reference No. (optional)"
            
