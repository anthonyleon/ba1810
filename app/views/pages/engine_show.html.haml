.row.profile.engine-profile
  .col.s12
    .card
      .card-content
        %h5.custom-card-title.center
          Engine
        %div.profile-image
          = image_tag 'aircraft-engine.png', size: "300x200", alt: 'Engine'

    .card
      .card-content
        %h5.custom-card-title
          Owner/Rep Info
          %hr
        .row
          %p.col.m6.s12{style: "margin: 5px 0"}
            %strong Last operator:
            = @engine.last_operator

    .card
      .card-content
        %h5.custom-card-title
          Asset Conditions
          %hr
        .row
          %p.col.m6.s12{style: "margin: 5px 0"}
            %strong Sale:
            = @engine.sale
          %p.col.m6.s12{style: "margin: 5px 0"}
            %strong Lease:
            = @engine.lease
          %p.col.m6.s12{style: "margin: 5px 0"}
            %strong Available date:
            = @engine.available_date

    .card
      .card-content
        %h5.custom-card-title
          Engine Description
          %hr
        .row
          %p.col.m6.s12{style: "margin: 5px 0"}
            %strong Engine major variant:
            = @engine.engine_major_variant
          %p.col.m6.s12{style: "margin: 5px 0"}
            %strong Engine minor variant:
            = @engine.engine_minor_variant
          %p.col.m6.s12{style: "margin: 5px 0"}
            %strong Esn:
            = @engine.esn
          %p.col.m6.s12{style: "margin: 5px 0"}
            %strong Condition:
            = @engine.condition
          %p.col.m6.s12{style: "margin: 5px 0"}
            %strong Engine Status:
            = @engine.id
          %p.col.m6.s12{style: "margin: 5px 0"}
            %strong Location:
            = @engine.location
          %p.col.m6.s12{style: "margin: 5px 0"}
            %strong Cycles remaining:
            = @engine.cycles_remaining

    .card
      .card-content
        %h5.custom-card-title
          Documents
          %hr
        - if @engine.documents.empty?
          No Documents Available
        - else
          = render @engine.documents

    = render 'documents/form', object: @engine if @engine.company == current_user

  %div.btn.custom-btn
    %i.fa.fa-arrow-left
    = link_to "Back", engines_path, class:"waves-effect waves-light"
  - if @engine.company == current_user
    |
    %div.btn.custom-btn.edit-btn
      %i.fa.fa-pencil
      = link_to 'Edit this engine', edit_engine_path(@engine)
