%table.table.striped.responsive-table.bordered#aircraftDTIndex
  %thead
    %tr
      %th Aircraft Type
      %th MSN
      %th Tail Number
      %th Y.O.B.
      %th MTow
      %th Engine Type
      %th APU
      %th Maintenance status
      %th Available Date
      %th Available For
      %th Owner/Rep
      %th Contact
      %th.is_th
  %tbody
    - @aircrafts.each do |aircraft|
      %tr
        %td= aircraft.aircraft_type.upcase
        %td= link_to aircraft.msn.upcase, aircraft
        %td= aircraft.tail_number.upcase
        %td= aircraft.yob.upcase
        %td= aircraft.mtow.upcase
        %td= aircraft.engine_major_variant.upcase + "-" + aircraft.engine_minor_variant.upcase
        %td= aircraft.apu_model.upcase
        %td= aircraft.maintenance_status.upcase
        %td= aircraft.available_date.upcase
        - if aircraft.sale? && aircraft.lease?
          %td= "Sale or Lease"
        - elsif aircraft.lease?
          %td=  "Lease"
        -else
          %td= "Contact Rep"
        %td= aircraft.company.name
        %td= aircraft.company.representative
        - if aircraft.company == current_user
          = hidden_field_tag 'is_available_aircraft', 'true'
          %td
            %span
              = link_to 'Edit', edit_aircraft_path(aircraft)
              = link_to aircraft, data: { aircraft_behavior: 'delete' } do
                %span.material-icons.red-text.icon-34
                  delete_forever

