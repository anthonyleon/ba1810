.card
  .card-content
    .card-title.center-align
      %h5 Notifications
    %hr/
    %table#invetoryPartsDT.table.striped.responsive-table.bordered
      %thead
        %tr
          %th Event
          %th Part #
          %th When?
          %th Condition
          %th Manufacturer
          %th
          %th
      %tbody
        - @notifications.each do |note|
          -if note.bid_id
            %tr
              %td.srchtbl= link_to "New Bid on One of your Auctions", note.bid.auction
              %td.srchtbl= note.bid.auction.part_num
              %td.srchtbl= distance_of_time_in_words_to_now(DateTime.now, Time.now + note.bid.created_at)
              %td.srchtbl= note.bid.condition
          -elsif note.auction_id
            %tr
              %td.srchtbl= link_to "New Opportunity", note.auction
              %td.srchtbl= note.auction.part_num
              %td.srchtbl= distance_of_time_in_words(Time.zone.now.to_f - note.auction.created_at.to_f) + ' ago'
              %td.srchtbl= note.auction.condition
            
            / %td= link_to 'Delete', inventory_part_path(inventory), method: :delete, data: { confirm: 'Are you sure?' }
      

