  function getTransactionFee(part_price){
      if( part_price && !isNaN(part_price) ){
          var tier0 = 0;
          var tier1 = 5000;
          var tier2 = 50000;
          var tier3 = 500000;
          var tier4 = 1000000;

          var price = new Object();

          price.part_price = part_price;  

          var tmp_aero_fee;
          if (part_price < tier1) { // 5,000
              tmp_aero_fee = part_price * 0.025;
          } else if (part_price < tier2) { // 50,000
              tmp_aero_fee = (part_price - tier1) * 0.015 + 125;
          } else if (part_price < tier3) { // 500,000
              tmp_aero_fee = (part_price - tier2) * 0.0125 + 800;
          } else if (part_price < tier4) { // 1,000,000
              tmp_aero_fee = (part_price - tier3) * 0.0075 + 6425;
          } else { //  anything over a million
              tmp_aero_fee = (part_price - tier4) * 0.0075 + 10175;
          }
          price.bid_aero_fee = tmp_aero_fee;

          var tmp_armor_fee;
          if (part_price < tier1) { // 5,000
              tmp_armor_fee = part_price * 0.015;
          } else if (part_price < tier2) { // 50,000
              tmp_armor_fee = (part_price - tier1) * 0.01 + 75;
          } else if (part_price < tier3) { // 500,000
              tmp_armor_fee = (part_price - tier2) * 0.0075 + 525;
          } else if (part_price < tier4) { // 1,000,000
              tmp_armor_fee = (part_price - tier3) * 0.005 + 3900;
          } else { //  anything over a million
              tmp_armor_fee = (part_price - tier4) * 0.0035 + 6400;
          }
          if (tmp_armor_fee < 10) {
              tmp_armor_fee = 10;
          }
          price.armor_fee = tmp_armor_fee;

          price.total_fee = price.armor_fee + price.bid_aero_fee;

          var totalAmount = part_price + price.total_fee;
          var totalAmountFixedVal = parseFloat(totalAmount).toFixed(2);
          var totalAmoutVal = toFixedNumber(totalAmountFixedVal);


          document.getElementById("transactionFee").innerHTML = '$'+totalAmoutVal;
      } else {
          document.getElementById("transactionFee").innerHTML = '$0.00';
      }
  }
  function toFixedNumber(x) {
      if (Math.abs(x) < 1.0) {
          var e = parseInt(x.toString().split('e-')[1]);
          if (e) {
              x *= Math.pow(10,e-1);
              x = '0.' + (new Array(e)).join('0') + x.toString().substring(2);
          }
      } else {
          var e = parseInt(x.toString().split('+')[1]);
          if (e > 20) {
              e -= 20;
              x /= Math.pow(10,e);
              x += (new Array(e+1)).join('0');
          }
      }
      return x;
  }