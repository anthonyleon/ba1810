.navbar.navbar-inverse
	.navbar-header
		%a.navbar-brand{:href => dashboard_path}
			= image_tag("/images/bid_aero_logo.png")
		%ul.nav.navbar-nav.pull-right.visible-xs-block
			%li
				%a{"data-target" => "#navbar-mobile", "data-toggle" => "collapse"}
					%i.icon-tree5
	#navbar-mobile.navbar-collapse.collapse
		%ul.nav.navbar-nav.navbar-right.top-navbar-right
			%li
				.heading-elements
					%button.btn.btn-labeled.btn-labeled-right.bg-primary.heading-btn.dropdown-toggle{"data-toggle" => "dropdown"}
						New
						%b
							%i.caret.navbar-icon
					%ul.dropdown-menu.dropdown-menu-right
						%li
							= link_to "Generate eRFQ", new_auction_path
			%li
				=link_to dashboard_path do
					%i.glyphicon.glyphicon-th-large.navbar-icon
			%li.navbar-icon
				=link_to notifications_index_path do
					%i.glyphicon.glyphicon-bell.navbar-icon{class: "#{Notification.any_unread?(current_user) ? 'animated swing text-warning' : ''}"}
			%li.dropdown.dropdown-user
				%a.dropdown-toggle{"data-toggle" => "dropdown"}
					%span
						= current_user.representative
					%i.caret.navbar-icon
				%ul.dropdown-menu.dropdown-menu-right
					%li
						= link_to edit_company_path do
							%i.icon-cog5
							Account settings
					%li
						= link_to logout_path do
							%i.icon-switch2
							Logout
/ /main navbar
/ Second navbar
#navbar-second.navbar.navbar-default
	%ul.nav.navbar-nav.no-border.visible-xs-block
		%li
			%a.text-center.collapsed{"data-target" => "#navbar-second-toggle", "data-toggle" => "collapse"}
				%i.icon-menu7
	#navbar-second-toggle.navbar-collapse.collapse
		%ul.nav.navbar-nav
			%li.dropdown.text-size-large.text-semibold
