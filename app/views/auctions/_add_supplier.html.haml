.form-group.add-supplier-partial.mt-10
  .row.new-supplier-fields
    %a.remove-supplier{style: "align-self: center;", :onclick => "removeSupplier($(this))"}
      %i.icon-cross3
    .col-sm-4
      .supplierField
        = label_tag "Company Name", "Company Name"
        %br/
      = autocomplete_field_tag "invitees[]", '', autocomplete_company_name_auctions_path, :size => 75, class: "form-control"
      / autocomplete_field_tag 'address', '', address_autocomplete_path, :size => 75
    .col-sm-4
      .supplierField
        = label_tag "Company E-mail", "Company E-mail"
        %br/
      = text_field_tag "invitees[]", "", class: "form-control"
