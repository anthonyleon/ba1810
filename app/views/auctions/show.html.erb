<p id="notice"><%= notice %></p>

<div>
  <h1>Part Number being Auctioned:</h1>
  <%= @auction.part_num %>
</div>
<div>
  <h1>Manufacturer List Price:</h1>
  <%= number_to_currency @init_price %>
</div>


<h2> Bids </h2>

<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Company</th>
        <th>Part number</th>
        <th>Description</th>
        <th>Serial Number</th>
        <th>Manufacturer</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
          <% @auction.bids.order(amount: :asc).each do |bid| %>
            <tr>
              <%= render bid %>
            </tr>
          <% end %>
    </tbody>
  </table>


</div>

<% if @auction.company == current_user %>
  <%= link_to 'Edit', edit_auction_path(@auction), class: 'btn btn-primary' %>
  <%= link_to 'Destroy', auction_path , method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary'%>
<% else %>
  <%= link_to 'New Bid', new_auction_bid_path(@auction), class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Back to Company Dashboard', company_path(current_user), class: 'btn btn-primary' %>
