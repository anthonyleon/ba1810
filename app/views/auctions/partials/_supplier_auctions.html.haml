- unless @supplier_auctions.empty?
  .card
    .card-content
      %table.table.striped.responsive-table#currentOpportunitiesDT.bordered
        %thead
          %tr
            %th Part Number
            %th Description
            %th Conditions
            %th Start Date
            %th Days Active
            %th Lowest Bid
            %th My Bid Price
            %th
            %th
            %th
        %tbody
          - @supplier_auctions.each do |auction|
            %tr
              %td= auction.part_num
              %td= AuctionPart.find(auction.id).description
              %td= auction.condition
              %td= auction.created_at.strftime("%m/%d/%Y")
              %td= ((Time.zone.now - auction.created_at) / 1.day).to_i
              %td= number_to_currency auction.bids.minimum(:amount) unless auction.bids.empty?
              %td= number_to_currency Bid.where(company_id: current_user.id).find_by(auction_id: auction.id).amount
              %td= link_to 'Show', auction
              %td= link_to 'Edit', edit_auction_path(auction)
              / %td= link_to 'Delete', auction, method: :delete, data: { confirm: 'Are you sure?' }
              %td= link_to 'Delete', auction, data: { current_opportunities_behavior: 'delete' }
      %div{style: "text-align: left;"}
        = link_to 'New Auction', new_auction_path, class: 'btn custom-btn'
