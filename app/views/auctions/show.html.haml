.row
  .col.s12
    .card
      .card-content
        %span.card-title.grey-text.text-darken-4
          .col-lg-2.auction-top-title
            .col-lg-1
              %h5
                = @auction.auction_part.description
              %h6
                = @auction.part_num
              -if @auction.cycles
                %h6
                  = "Required Cycles Remaining: #{@auction.cycles.empty? ? "N/A" : number_with_delimiter(@auction.cycles, :delimiter => ',')}"
              %h6
                = "Quantity: #{number_with_delimiter(@auction.quantity, :delimiter => ',') || "1"}"
              %h6
                = "Conditions: #{AssetDecorator.rename(@auction.object, @auction.object.condition)}"
              %h6
                = "Target Price: #{@auction.target_price || "N/A"}"
            .col-lg-1
              - if @auction.company == current_user
                .col.s12
                  .col.s5
                    = form_tag "/auctions/#{@auction.id}", method: 'PATCH' do
                      .col.s5
                        = text_field_tag 'target_price', nil, placeholder: 'Update Target Price', class: "dollars"
                      / %div.btn.custom-btn.target-price{style: 'margin-top: 10px;'}
                      = button_tag(type: "submit", class: "btn-floating btn-small custom-green-color") do
                        %i.fa.fa-lg.fa-plus


                  .col.s7
                    %div.btn.custom-btn.right{style: 'margin-top: 10px;'}
                      %i.fa.fa-pencil
                      = link_to 'Edit this Auction', edit_auction_path(@auction)
              - else
                - if current_user.temp?
                  = link_to 'New Quote', temp_user_new_bid_path(@auction), class: 'btn custom-btn right' 
                - else
                  = link_to 'New Bid', new_auction_bid_path(@auction), class: 'btn custom-btn right'
              .col-lg-1{style: "margin-top: 46px;"}
                %h6
                  %ul
                    %li
                      %strong
                        Shipping To
                      %div
                        = @auction.destination_zip + ", "
                        = @auction.destination_city
                      %div
                        = @auction.destination_country
                      %div{ style: "margin-top: 12px !important;"}
                        %strong
                          ="Delivery Date"
                        %div
                          = @auction.required_date

          .col-lg-2.auction-title
            .col-lg-1
              
            .col-lg-1
              
        %hr/
        - if @auction.bids.empty?
          .nobid.center-align
            %p.flow-text There are no bids on this auction yet.
        #bids-container
          - if !@invited_suppliers_bids.empty?
            %h4.custom-card-title
              Invited Suppliers
            %table.table.responsive-table.bordered
              %thead
                %tr
                  %th Manufacturer
                  %th Serial Number
                  %th Condition
                  %th Amount
                  %th Est. Shipping
                  %th Avg Rating
              %tbody
                - BidDecorator.decorate_collection(@invited_suppliers_bids.order(part_price: :asc)).each do |bid|
                  %tr#cursor-row
                    = render bid
          - if !@bid_aero_suppliers_bids.empty?
            %br
            %h4.custom-card-title
              Bid Aero Suppliers
            %table.table.responsive-table.bordered
              %thead
                %tr
                  %th Manufacturer
                  %th Serial Number
                  %th Condition
                  %th Amount
                  %th Est. Shipping
                  %th Avg Rating
              %tbody
                - BidDecorator.decorate_collection(@bid_aero_suppliers_bids.order(part_price: :asc)).each do |bid|
                  %tr#cursor-row
                    = render bid
