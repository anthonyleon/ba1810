.row
  .col.s12
    .card
      .card-content
        %span.card-title.grey-text.text-darken-4
          .col-lg-3.auction-top-title
            .col-lg-1
              %h5.col-sm-2.part-details
                .col-sm-1.font-bold
                  Part Number
                .col-sm-1
                = ": #{@auction.part_num}"
              %h6.col-sm-2.part-details
                .col-sm-1.font-bold
                  Description
                .col-sm-1
                = ": #{@auction.auction_part.description}"
              %h6.col-sm-2.part-details
                .col-sm-1.font-bold
                  Target Price
                .col-sm-1
                = ": #{@auction.target_price || "N/A"}"
              %h6.col-sm-2.part-details
                .col-sm-1.font-bold
                  Quantity
                .col-sm-1
                = ": #{number_with_delimiter(@auction.quantity, :delimiter => ',') || "1"}"
                = "Quantity: #{number_with_delimiter(@auction.quantity, :delimiter => ',') || "1"}"
              %h6.col-sm-2.part-details
                .col-sm-1.font-bold
                  Conditions
                .col-sm-1
                = ": #{AssetDecorator.rename(@auction.object, @auction.object.condition)}"
              -if @auction.cycles
                %h6.col-sm-2.part-details
                  .col-sm-1.font-bold
                    Conditions
                  .col-sm-1
                    = ": #{@auction.cycles.empty? ? "N/A" : number_with_delimiter(@auction.cycles, :delimiter => ',')}"
              -if @auction.company == current_user
                %h6
                  = link_to 'Edit', edit_auction_path(@auction)
            .col-lg-2
              .col-lg-1
                - if @auction.company == current_user
                  .col-md-3
                    .col-md-2
                      = form_tag "/auctions/#{@auction.id}", class: "update-target-price", method: 'PATCH' do
                        = text_field_tag 'target_price', nil, placeholder: 'Update Target Price', class: "dollars"
                        / %div.btn.custom-btn.target-price{style: 'margin-top: 10px;'}
                        = button_tag(type: "submit", class: "btn-floating btn-small custom-green-color plus-button") do
                          %i.fa.fa-lg.fa-plus
                    
                - else
                  - if current_user.temp?
                    = link_to 'New Quote', temp_user_new_bid_path(@auction), class: 'btn custom-btn right' 
                  - else
                    = link_to 'New Bid', new_auction_bid_path(@auction), class: 'btn custom-btn right'

              .col-lg-1
                %h6
                  %ul
                    %li
                      %strong
                        Shipping To
                      %div
                        = @auction.destination_zip + ", "
                        = @auction.destination_city
                      %div
                        = @auction.destination_country
                      %div{ style: "margin-top: 12px !important;"}
                        %strong
                          ="Delivery Date"
                        %div
                          = @auction.required_date

          .col-lg-2.auction-title
            .col-lg-1
              
            .col-lg-1
              
        %hr/
        - if @auction.bids.empty?
          .nobid.center-align
            %p.flow-text There are no bids on this auction yet.
        #bids-container
          - if !@invited_suppliers_bids.empty?
            %h4.custom-card-title
              Invited Suppliers
            %table.table.responsive-table.bordered
              %thead
                %tr
                  %th Manufacturer
                  %th Serial Number
                  %th Condition
                  %th Amount
                  %th Est. Shipping
                  %th Avg Rating
              %tbody
                - BidDecorator.decorate_collection(@invited_suppliers_bids.order(part_price: :asc)).each do |bid|
                  %tr#cursor-row
                    = render bid
          - if !@bid_aero_suppliers_bids.empty?
            %br
            %h4.custom-card-title
              Bid Aero Suppliers
            %table.table.responsive-table.bordered
              %thead
                %tr
                  %th Manufacturer
                  %th Serial Number
                  %th Condition
                  %th Amount
                  %th Est. Shipping
                  %th Avg Rating
              %tbody
                - BidDecorator.decorate_collection(@bid_aero_suppliers_bids.order(part_price: :asc)).each do |bid|
                  %tr#cursor-row
                    = render bid
