.row
  .col.s12
    .card
      .card-content
        .card-title.center-align
          .company-logo
            %a{:href => root_path}
              = image_tag("bid-areo-white.png", class: 'responsive-img')
          %h5.custom-card-title.center Sign In
      %hr.clearfix/
      .container
        = form_for(:login, url: login_path) do |f|
          .row
            .input-field
              = f.text_field :email, class: "validate", id: 'email'
              = f.label :email
          .row
            .input-field
              = f.password_field :password, class: "validate"
              = f.label :password
          .row
            %button.btn.custom-btn.waves-effect.waves-light{:name => "action", :type => "submit"}
              %i.material-icons.right
                vpn_key
              Log In
          .row
            .nav-wrapper
              %ul
                %li
                  = link_to new_password_reset_path, class: 'waves-effect waves-light btn upload' do
                    %i.material-icons.left.prefix
                      autorenew
                    Forgot Your Password?
          .row
            %p.custom-card-title Not a registered company?
            %a.btn.custom-btn.waves-effect.waves-light{href: new_company_path}
              %i.material-icons.right lock_open
              Sign Up
          %br/
      %h5
        %a.waves-effect.waves-light.right.modal-trigger{:href => "#aboutModal"}
          About Us
      #aboutModal.modal
        .modal-content
          = render './layouts/commons/about'
